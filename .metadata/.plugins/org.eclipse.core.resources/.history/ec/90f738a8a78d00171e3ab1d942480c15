#include <iostream>
using namespace std;

int main() {
	int numero=0;
	int somma=0;
	int media=0;
	for(int i=0;i<4;i++){


		cout<<"inserire numero"<<endl;
		cin>>numero;
		somma=somma+numero;
		media=somma/4;


	}
	cout<<"la somma e"<<somma<<endl;
	cout<<"la media e"<<media<<endl;



	return 0;
}
