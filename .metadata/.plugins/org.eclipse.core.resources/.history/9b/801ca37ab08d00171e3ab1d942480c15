#include <iostream>
using namespace std;

int main() {
	int numero=0;
	int n=0;
	cout<<"inserisci il numero di volte"<<endl;
	cin>>n;
	for(int i=n;i>0;i--){

		if(n%2==0)
			cout<<n<<endl;
		n--;
		}



	return 0;
}
